<% if @user %>
  <div>
    <p>You are logged in as:</p><%= @user.name%>
  </div>
  <br>
  <h2> Organisations </h2>
  <% @organisation.each do |org| %>
  <div>
   <ul>
     <li>
       <%= org.name %> <%= link_to "Edit", %><%= link_to "Join"%>
     </li>
   </ul>
  </div>
  <% end %> 
  <br>
  <h2> Create an Organisation </h2>
  <%= form_with url: organisations_path do |form| %>
    <div>
      <p>Name:</p>
      <%= form.text_field :name %>
    </div>
    <div>
      <p>Hourly rate: $</p>
      <%= form.number_field :hourly_rate %>
    </div>
    <%= form.submit "Create and Join" %>
  <% end %> 
<% end %> 